{
  "private": true,
  "name": "dice-trix",
  "version": "0.0.0",
  "description": "Dicetrix - A gravity-matching puzzle game combining Tetris-style mechanics with dice-based matching",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build:client && npm run build:server",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:client && npm run build:server",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "dotenv -e .env -- devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login --copy-paste",
    "launch": "npm run build && npm run deploy && devvit publish",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:match-detection": "vitest --run src/client/game/models/__tests__/MatchDetection.test.ts",
    "test:scoring": "vitest --run src/client/game/models/__tests__/ScoringValidation.test.ts",
    "test:cascade": "vitest --run src/client/game/models/__tests__/CascadeLoopPrevention.test.ts",
    "test:api": "vitest --run src/server/__tests__/ApiIntegration.test.ts",
    "test:performance": "vitest --run src/client/game/systems/__tests__/PerformanceBenchmarks.test.ts",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@devvit/web": "^0.12.1",
    "devvit": "^0.12.1",
    "express": "5.1.0",
    "phaser": "3.88.2"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@types/express": "5.0.1",
    "@types/jsdom": "^27.0.0",
    "@types/supertest": "6.0.2",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.23.0",
    "globals": "15.15.0",
    "jsdom": "25.0.1",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "supertest": "7.0.0",
    "terser": "5.39.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}
