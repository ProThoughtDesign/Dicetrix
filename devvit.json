{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "dice-trix",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "media": {
    "dir": "assets"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Check Reddit Integration Status",
        "description": "View Dicetrix Reddit Integration System Status",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "capabilities": [
    "scheduler"
  ],
  "dev": {
    "subreddit": "dice_trix_dev"
  }
}
